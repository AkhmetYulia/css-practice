<header class="header">
    <a href="#test">
        {{>logo}}
    </a>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_text">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">

        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form-input-{{id}}">
            {{/each}}
        </div>
        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}">
            <label>{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}

</main>

{{#with updates}}
<div class="updates">
    <div class="updates_title">{{title}}</div>
    {{#each list}}
    <div class="updates_name">{{nickname}}</div>
    <p class="updates_text">{{description}}</p>
    {{/each}}
    <a href="#" class="updates_link">All updates</a>
</div>
{{/with}}

<div class="expirience">
    {{#with expirience}}
    <strong class="expirience_title">{{title}}</strong>
    <div class="expirience_list">
        {{#each list}}
        <div class="expirience_content">
            <div class="card">
                <div class="expirience_name">{{name}}</div>
                <p class="expirience_details">{{details}}</p>
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}
</div>

<footer class="footer" id="test">
    <div>
        {{>logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>